// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model City {
  id        Int      @id @default(autoincrement())
  name      String   @unique // Unique because we don't want duplicates (e.g. two Rigas)
  country   String?  // Optional: Store country code (e.g. "LV") for precision
  createdAt DateTime @default(now())

  @@map("cities") 
}
